@{
    ViewBag.Title = "Home Page";
}

@Html.Partial("_AddProduct")
<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" media="screen" href="~/Content/jqGridCss/ui.jqgrid.css" />

<script src="~/Scripts/jqGrid/i18n/grid.locale-en.js" type="text/javascript"></script>
<script src="~/Scripts/app/grid.js" type="text/javascript"></script>
<div>
    <section style="">
        <input type='button' id='add-rows-btn' value='Add' style="display:inline-block" />
        <input type='button' id='edit-rows-btn' value='Edit' style="display:none" />
        <input type='button' id='save-rows-btn' value='Save' style="display:none" />
        <input type='button' id='cancel-rows-btn' value='Cancel' style="display:none" />
        <input type='button' id='delete-rows-btn' value='Delete' style="display:none" />
        <input type='button' id='add-operation-btn' value='Add Operation' style="display:none" />
        <input type='button' id='view-oper-grid-btn' value='View Operation' style="display:none" />

        <table id="prod-grid"></table>
        <div id="pjmap"></div>

        <section id="product-statistic" style="display:none; margin:10px">
            <p style="margin:0px">
                <span class="statistic-label">Name: </span>
                <span id="stat-name" class="statistic-value"></span>
                <span class="statistic-label">; Count: </span>
                <span id="stat-count" class="statistic-value"></span>
                <span class="statistic-label">; Price: </span>
                <span id="stat-price" class="statistic-value"></span>
                <span class="statistic-label">; Total Price: </span>
                <span id="stat-tprice" class="statistic-value"></span>
            </p>
        </section>
    </section>

    @Html.Partial("_AddOperationDialog")
    @Html.Partial("_OperationGridDialog")
    <span id="empty-ajax"></span>
</div>
